@model OdeToFood.ViewModels.HomeIndexViewModel
@{
    ViewBag.Title = "Home Page"; // Execute before the layout view    
    // Override the default layout
    // this.Layout = "~/views/shared/_layout.cshtml";
}

<h1>Hello </h1>
<h2>All Restaurants</h2>
<hr />

<table>
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Id</td>
            <td>@restaurant.Name</td>
            <td>

                <!-- 3 ways to generate the link -->

                @*
                    <a href="/home/details/@restaurant.Id">Details</a>
                    @Html.ActionLink("Details 2", "Details", "Home", new { id = restaurant.Id })
                *@

                <a asp-action="Details" asp-route-id="@restaurant.Id">Details</a>
            </td>
        </tr>
    }
</table>

<!-- Call Create action on the current controller -->
<a asp-action="Create">Add Restaurant</a>

@section footer {
    CurrentMessage: @Model.CurrentMessage
}