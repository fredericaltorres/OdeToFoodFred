@model OdeToFood.ViewModels.HomeIndexViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <h1>Hello </h1>
    <div>@Model.CurrentMessage </div>

    <table>
        @foreach(var restaurant in Model.Restaurants) {
        <tr>
            <td>@restaurant.Id</td>
            <td>@restaurant.Name</td>
            <td>

                <!-- 3 ways to generate the link -->

                <a href="/home/details/@restaurant.Id">Details</a>
                @Html.ActionLink("Details 2", "Details", "Home", new {id=restaurant.Id })
                <a asp-action="Details" asp-route-id="@restaurant.Id">Details 3</a>
            </td>
        </tr>
        }
    </table>

    <!-- Call Create action on the current controller -->
    <a asp-action="Create">Add Restaurant</a>

</body>
</html>
